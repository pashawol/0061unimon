mixin mnu()
	- var nav= {"Применения":"#","Оборудование":"#","Контакты ":"#"}
	ul
		li: a(href="#") О системе
		li.menu-item-has-children
			a(href="#") Мониторинг
			ul.sub-menu
				- for (var x = 0; x < 2; x++)
					li: a(href="#") Температуры
					li: a(href="#") Влажности
					li: a(href="#") Управление отоплением
		
		each linkPatch, linkName in nav
			li: a(href= linkPatch)= linkName
