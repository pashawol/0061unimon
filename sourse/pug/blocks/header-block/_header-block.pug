mixin header-block()
	// start header-block
	+b.header-block#header-block
		.container
			.row
				.col-lg-7.text-lg-left.text-center( class=" wow fadeInLeft " data-wow-offset="80" data-wow-duration="1.5s")
					h1 Контроль показателей датчиков и&nbsp;управление оборудованием через Интернет и&nbsp;SMS
					+e.row.row.align-items-center.d-none.d-lg-flex
						.col-auto
							img(src="img/head-img-1.png", alt="alt")
						.col
							p Подберем несколько вариантов оборудования, закупим, настроим, смонтируем и обучим
							+e.gray Сделано в России	
				.col.text-sm-left.text-center( class=" wow fadeInRight " data-wow-offset="80" data-wow-duration="1.5s")
					+e.img-block.gal
						a(href="img/head-img-2.png")
						a(href="img/head-img-2.png")
						a(href="img/head-img-2-mob.png")
						img.res-i(src="img/head-img-3.png", alt="")
			.d-none.d-md-block
				+e.A.btn.btn.btn-lg.btn-block.btn-primary.scroll-link(href="#form-wrap"     class=" wow fadeInUp " data-wow-offset="80" data-wow-duration="1.5s"): span Бесплатный подбор решения
		+e.before( class=" wow fadeInRight " data-wow-offset="80" data-wow-duration="1.5s")
			+e.before-inner
	// end header-block

mixin header-block-control-temp()
	// start header-block
	+b.header-block--control-temp#header-block
		.container
			.row
				.col-lg-8( class=" wow fadeInLeft " data-wow-offset="80" data-wow-duration="1.5s")
					h1.text-lg-left.text-center 
						span.d-none.d-lg-inline Автоматизация мониторинга 
						| 
						span.d-lg-none Мониторинг 
						| 
						| температуры и&nbsp;влажности в&nbsp;местах хранения лекарств
						span.d-none.d-lg-inline енных средств и&nbsp;МИБП
					.h6.text-lg-left.text-center Соответствует Приказу &#8470;&nbsp;646н и&nbsp;СанПин СП&nbsp;3.3.2.3332-16
					+e.row.row.align-items-center.d-none.d-lg-flex
						.col-auto.d-none.d-lg-block
							+e.img-wrap--control-temp: img(src="img/img-2/head-img-2.png", alt="")
						.col
							+e.text-block--control-temp
								+e.small-title Самое выгодное  предложение 
									span.d-none.d-lg-inline на&nbsp;рынке
								+e.list-item Блок управления  
									| 
									span.text-primary от 19 000 руб.
								
								+e.list-item Датчики 
									| 
									span.text-primary от 1 900 руб.
								
				.col.text-sm-left.text-center( class=" wow fadeInRight " data-wow-offset="80" data-wow-duration="1.5s")
					+e.img-block--control-temp.gal
						a(href="img/head-img-2.png")
						a(href="img/head-img-2.png")
						a(href="img/head-img-2-mob.png")
						img.res-i(src="img/img-2/head-img-2-2.png", alt="")
			+e.text-block--control-temp.d-lg-none
				+e.small-title Самое выгодное  предложение 
					span.d-none.d-lg-inline на&nbsp;рынке
				+e.list-item Блок управления  
					| 
					span.text-primary от 19 000 руб.
				
				+e.list-item Датчики 
					| 
					span.text-primary от 1 900 руб.
		+e.before-control-temp( class=" wow fadeInRight " data-wow-offset="80" data-wow-duration="1.5s")
			//- +e.before-inner
	// end header-block


