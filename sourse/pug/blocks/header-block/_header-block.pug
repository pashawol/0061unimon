						+link("hospital.png",'Медучреждений (больниц, поликлиник и т.п.)',"Медучреждений")
						+link("pharmacy.png",'Аптек',"Аптек")
						+link("L0001.png",'Холодильных камер',"Холодильных камер")
						+link("refrigerator-truck.png",'Авторефрижераторов',"Авторефрижераторов") 
						




				.col.text-sm-left.text-center( class=" wow fadeInRight " data-wow-offset="80" data-wow-duration="1.5s")
					+form-wrap()(class="modal-win")
						.h3.strong.text-center.text-white.pb-3 Рассчитаем стоимость картирования за&nbsp;1&nbsp;час
						form 
							+input("hidden"," a")(class="order ")
							+input("text","Как Вас зовут?")(class="form-wrap__input-icon ")
								+e.SPAN.icon-wrap
									+icon("user") 
							+input("tel","Номер телефона")(class="form-wrap__input-icon ")
								+e.SPAN.icon-wrap
									+icon("tel")
							+e.BUTTON.btn.btn.btn-block.btn-primary(type="submit" value="" ) Бесплатный расчет
						+polite('Бесплатный расчет')
	
	// end header-block
