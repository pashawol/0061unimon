mixin header-block-4()
	// start header-block
	+b.header-block--4#header-block
		.container
			.row
				.col-lg-6
					.d-lg-none: h1.pt-0 ZONT-H1V
					+e.slider-wrap
						+e.slider--big
							- for (var x = 0; x < 2; x++)
								+e.slide--big
									+e.slide-img-wrap--big
										img.res-i(src="#" data-lazy="img/img-4/head-1.png", alt="")
								// +e.slide
						+e.slider--small.d-none.d-md-block
							- for (var x = 0; x < 2; x++)
								+e.slide--small
									+e.slide-img-wrap--small
										img.res-i(src="#" data-lazy="img/img-4/head-1.png", alt="")
								// +e.slide
				.col
					.d-none.d-lg-block: h1 ZONT-H1V
					p  Предназначен для дистанционного контроля и&nbsp;управления отопительным котлом с&nbsp;помощью SMS-команд, интернет через мобильное приложение для Android и&nbsp;iOS.
					+e.list-item Настройка термостата и&nbsp;управление его работой осуществляется по&nbsp;каналу GSM связи и&nbsp;через интернет
					+e.list-item Термостат в&nbsp;соответствии заданными параметрами автоматически регулирует работу котла
					+e.list-item Термостат может контролировать техническое состояние котла 
					.row.align-items-center
						.col-auto
							+e.price-big 9 900  ₽
						.col-auto
							.buy-element
								+e.A.btn-basket.mt-0(href="#" data-toggle="modal" data-target="#modal-one-click" data-title="Купить " data-order="Купить "   data-btn="Купить"  ): span Купить
							.basket-element
								+b.block-add
									+e.btn--minus.btn
										+icon('minus')
									input.form-control(type="text" value="2 шт.")
									+e.btn--plus.btn
										+icon('plus-sm')
					.row.row--small.basket-element
						.col-auto
							+e.A.btn-basket(href="#"): span В корзину
						.col-auto
							+e.A.btn-one-click.btn-secondary(href="#" data-toggle="modal" data-target="#modal-one-click" data-title="Купить в один клик" data-order="Купить в один клик"   data-btn="Купить"  ): span Купить в один клик
	// end header-block


mixin header-block-6()
	// start header-block
	+b.header-block--6#header-block(style="background-image: url(img6/header-bg-6.jpg);")
		.container
			.row
